<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="8dp"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/articleSingleItem">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:src="@drawable/article_image_loading_background"
        android:id="@+id/articleSingleItemImage"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/articleSingleItemTitle"
            android:text="@string/sample_title"
            android:maxLines="2"
            android:textSize="18sp"
            android:textColor="@color/primaryTextColor"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/articleSingleItemSubTitle"
            android:text="@string/sample_subtitle"
            android:textStyle="bold"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>